#!/bin/bash
tolower() {
  tr '[:upper:]' '[:lower:]'
}

dir="`dirname "$0"`"
arch="`uname -m | tolower`"
os="`uname | tolower`"
bin="${dir}/bin/${os}/${arch}"
exe="${bin}/inexor"

ln -sf /lib/${arch}-linux-gnu/libudev.so.1 ${bin}/libudev.so.0
export LD_LIBRARY_PATH="$bin:$LD_LIBRARY_PATH"

# source inexor_node_unix&
echo >&2 "CALLING: ${exe}"
find "$dir"/media/ -maxdepth 1 -print0                      \
  | sed 's/^/-k/' -z                                       \
  | xargs --null "${exe}" -q"~/.inexor"

# Kill all remaining jobs in the very end
kill $!
